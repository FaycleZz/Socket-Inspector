{
  // consider "jsx-a11y" plugin and the new type-aware features
  "plugins": ["react", "promise", "react-perf"],
  // https://oxc.rs/docs/guide/usage/linter/config.html#enabling-groups-of-rules-categories
  "categories": {
    "correctness": "error"
  },
  "rules": {
    "no-var": "error",
    "react/rules-of-hooks": "error"
  },
  "ignorePatterns": ["playwright/test-app/**", "components/shadcn", "hooks/useIsMobile.ts"],
  "overrides": [
    {
      "files": ["playwright/fixtures.ts"],
      "rules": {
        "react/rules-of-hooks": "off"
      }
    }
  ]
}
